# --|| Imports ||--
from cgitb import text
from cmath import inf
from telnetlib import theNULL
import tkinter as tk
from turtle import bgcolor
from random import randint
import time as Time

# --|| Variables ||--
computer_num = randint(1, 1000)
guessed_before = "test"
count = 1

# --|| Customization ||--
root = tk.Tk()
root.attributes("-fullscreen", False)
root.geometry("775x160")
root.title("Guess Game")

# --|| Functions ||--

# --| Check Input Text |--
def take_input():
    guess = inputText.get("1.0", "end-1c")
    global guessed_before
    global count

    if int(guess) > 1000 or int(guess) < 1:
        if guessed_before == "boundaries":
            count += 1
            infoText["text"] = "Your inputted text doesnt fit the boundaries given " + \
                "x" + str(count)
        else:
            guessed_before = "boundaries"
            infoText["text"] = "Your inputted text doesnt fit the boundaries given."
            count = 1
    elif int(guess) < computer_num:
        if guessed_before == "lower":
            count += 1
            infoText["text"] = "You have a too small number " + \
                "x" + str(count)
        else:
            guessed_before = "lower"
            infoText["text"] = "You have a too small number"
            count = 1
    elif int(guess) > computer_num:
        if guessed_before == "higher":
            count += 1
            infoText["text"] = "You have a too big number " + "x" + str(count)
        else:
            guessed_before = "higher"
            infoText["text"] = "You have a too big number"
            count = 1
    else:
        infoText["text"] = "You guessed it correctly! If you wish to continue playing, press the Restart Button. Otherwise, press the Quit Button."

# --| Restart Game |--
def restart_game():
    global computer_num
    computer_num = randint(1, 1000)
    inputText.delete("1.0", "end-1c")
    infoText["text"] = "Enter a number (1-1000). If you guess the same number that the computer randomly picked, you win."

# --| Quit Game |--
def quit_game():
    root.quit()

# --|| Widgets ||--

# --| Info Text |--
infoText = tk.Label(
    root, text="Enter a number (1-1000). If you guess the same number that the computer randomly picked, you win.")
# -- Input TextField --
inputText = tk.Text(root, height=1, width=4)
# -- Submit Button --
submitButton = tk.Button(root, height=2, width=12,
                         text="Submit", command=lambda: take_input())
# -- Restart Button --
restartButton = tk.Button(root, height=2, width=12,
                          text="Restart Game", command=lambda: restart_game())
# -- Quit Button --
quitButton = tk.Button(root, height=2, width=12,
                       text="Quit", command=lambda: quit_game())

# --| Add Widgets |--
infoText.pack()
inputText.pack()
submitButton.pack()
restartButton.pack()
quitButton.pack()

root.mainloop()
